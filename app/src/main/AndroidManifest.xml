<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="cesc.shang.notepaper">

    <application
        android:name=".application.NoteApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme">
        <activity
            android:name=".activity.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.HistoryActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activity.SettingActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activity.SelectPaintColorActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activity.SelectBackGroundColorActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activity.SelectPaintWidthActivity"
            android:screenOrientation="portrait"/>
    </application>
</manifest>
